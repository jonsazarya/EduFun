<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="@color/light_active">

    <RelativeLayout
        android:id="@+id/iv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="270dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/logo_edufun"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardCornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/iv_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_halo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/halo_sahabat_edufun"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:alpha="0"
                tools:alpha="100"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/selamat_datang"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center"
                android:alpha="0"
                tools:alpha="100"/>

            <ImageView
                android:id="@+id/btn_login"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_navigate_next_24"
                android:background="@color/normal_hover"
                android:layout_marginTop="16dp"
                android:alpha="0"
                tools:alpha="100"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>